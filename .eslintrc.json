{
  "extends": [
    "airbnb-base",
    "prettier",
    "prettier/react",
    "./.eslint.rules.json"
  ],
  "plugins": [
    "prettier",
    "react"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true,
      "experimentalObjectRestSpread": true,
      "experimentalDecorators": true
    }
  },
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": {
          "resolve": {
            "modules": ["app", "node_modules"],
            "alias": {
              "components": "components",
              "containers": "containers"
            }
          }
        }
      }
    }
  },
  "env": {
    "es6":     true,
    "browser": true,
    "node":    true,
    "jest":    true
  }
}
